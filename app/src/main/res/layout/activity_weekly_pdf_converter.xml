<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PersonalLoan.PDF.Weekly.WeeklyPdfConverter">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="3dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_less_padding"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/logo"/>

            <TextView
                android:id="@+id/txt_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Loan Details"
                android:textSize="16sp"
                android:layout_marginRight="30dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="#5F5F5F"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/border_less_padding"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="#5F5F5F"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mobile"
                    android:textColor="#5F5F5F"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CollectionType"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="#5F5F5F"
                    android:textSize="12sp" />

                <!--                <TextView-->
                <!--                    android:layout_width="wrap_content"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:fontFamily="@font/poppins_medium"-->
                <!--                    android:text="Duration"-->
                <!--                    android:textColor="#5F5F5F"-->
                <!--                    android:textSize="12sp" />-->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LoanAmount"
                    android:textColor="#5F5F5F"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="12sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TotalInterest"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="#5F5F5F"
                    android:textSize="12sp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TotalAmount"
                    android:textColor="#5F5F5F"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="12sp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:fontFamily="@font/poppins_medium"
                    android:text="DisburseDate"
                    android:textColor="#5F5F5F"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:fontFamily="@font/poppins_medium"
                    android:text="TotalCollectedAmount"
                    android:textColor="#5F5F5F"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="Name"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="#5F5F5F"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/mobile_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Mobile"
                    android:textColor="#5F5F5F"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/collectionType_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="collectionType"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="#5F5F5F"
                    android:textSize="12sp" />

                <!--                <TextView-->
                <!--                    android:id="@+id/duration_txt"-->
                <!--                    android:layout_width="wrap_content"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:layout_gravity="end"-->
                <!--                    android:text="duration"-->
                <!--                    android:fontFamily="@font/poppins_medium"-->
                <!--                    android:textColor="#5F5F5F"-->
                <!--                    android:textSize="14sp" />-->

                <TextView
                    android:id="@+id/loanAmount_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:gravity="center"
                    android:fontFamily="@font/poppins_medium"
                    android:text="loanAmount"
                    android:textColor="#5F5F5F"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/totalInterest_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:fontFamily="@font/poppins_medium"
                    android:text="totalInterest"
                    android:textColor="#5F5F5F"
                    android:textSize="12sp" />


                <TextView
                    android:id="@+id/totalAmount_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:gravity="center"
                    android:fontFamily="@font/poppins_medium"
                    android:text="TotalAmount"
                    android:textColor="#5F5F5F"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/disburseDate_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:gravity="center"
                    android:fontFamily="@font/poppins_medium"
                    android:text="disburseDate"
                    android:textColor="#5F5F5F"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/collectionAmount_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:gravity="center"
                    android:fontFamily="@font/poppins_medium"
                    android:text="collectionAmount"
                    android:textColor="#5F5F5F"
                    android:textSize="12sp" />


            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:background="@drawable/border_less_padding"
            android:text="Emi's"
            android:padding="3dp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textColor="#5F5F5F"
            android:textStyle="bold"
            android:textSize="14sp"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            tools:ignore="MissingConstraints">

            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="EMIAmount"
                android:gravity="center"
                android:background="@drawable/border_less_padding"
                android:textColor="#5F5F5F"
                android:textSize="14sp" />

            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:gravity="center"
                android:background="@drawable/border_less_padding"
                android:text="DateOfCollection"
                android:textColor="#5F5F5F"
                android:textSize="14sp" />

            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:gravity="center"
                android:text="RemainingAmount"
                android:background="@drawable/border_less_padding"
                android:textColor="#5F5F5F"
                android:textSize="14sp" />



        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/pdf_emi_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:paddingBottom="20dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            tools:ignore="MissingConstraints">

        </androidx.recyclerview.widget.RecyclerView>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>