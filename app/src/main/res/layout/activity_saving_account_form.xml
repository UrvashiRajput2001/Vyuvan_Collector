        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_marginTop="15dp"-->
        <!--            android:fontFamily="@font/open_sans_bold"-->
        <!--            android:text="Select Mode"-->
        <!--            android:textColor="#5F5F5F"-->
        <!--            android:textSize="16sp" />-->

