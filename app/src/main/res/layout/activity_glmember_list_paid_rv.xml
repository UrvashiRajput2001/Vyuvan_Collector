<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp"
    tools:context=".GroupLoan.GroupLoanPhoneSearch.GLMemberListPaidRV">

    <androidx.cardview.widget.CardView
        android:id="@+id/list_Emi_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/card_view_bg"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_weight="1"
                android:id="@+id/ll1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/member_Name_Txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans_bold"
                    android:text="Name"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/mobile_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/black"
                    android:text="Mobile : +9100000000"
                    android:textSize="10sp"/>



                <TextView
                    android:id="@+id/date_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/black"
                    android:text="DateOFCollect : 00-00-0000"
                    android:textSize="10sp"/>

                <TextView
                    android:id="@+id/lastDateOfCollect_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/black"
                    android:text="lastDateCollect : 00-00-0000"
                    android:textSize="10sp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/emi_Txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:text="EMI: 0000"
                        android:layout_marginRight="5dp"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="5dp"
                        android:background="@color/black" />

                    <TextView
                        android:id="@+id/collectionType_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Type: All"
                        android:textColor="@color/black"
                        android:textSize="12sp" />





                </LinearLayout>


                <!--                <TextView-->
                <!--                    android:id="@+id/collectionType_txt"-->
                <!--                    android:layout_width="wrap_content"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:fontFamily="@font/poppins_medium"-->
                <!--                    android:text="EMI CollectionType: Yearly"-->
                <!--                    android:textColor="#5F5F5F"-->
                <!--                    android:textSize="14sp" />-->


            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/collectEmi_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:gravity="center"
                android:background="@drawable/ellipse"
                android:fontFamily="@font/open_sans_medium"
                android:text="Collect"
                android:textColor="@color/white"
                android:textSize="10sp"
                app:backgroundTint="@null"
                tools:ignore="MissingConstraints" />
        </LinearLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>